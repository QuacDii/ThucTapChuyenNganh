@using TTCN.Models
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Quản lý Phim";
    var danhSachPhim = ViewBag.ph as IEnumerable<Phim>;
}

<style>
    .desc-truncate {
        max-width: 250px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        font-size: 0.9rem;
        color: #555;
    }

    .title-truncate {
        max-width: 150px;
        font-weight: 600;
        color: #2e59d9;
    }

    .poster-thumb {
        width: 60px;
        height: 90px;
        object-fit: cover;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        transition: transform 0.2s;
    }

        .poster-thumb:hover {
            transform: scale(1.5); 
            z-index: 10;
        }

    .table thead th {
        background-color: #4e73df; 
        color: white;
        border: none;
        white-space: nowrap;
        vertical-align: middle;
    }

    .table tbody td {
        vertical-align: middle;
    }
</style>

<div class="container-fluid">
    <div class="card shadow mb-4 border-0">
        <div class="card-header py-3 d-flex justify-content-between align-items-center bg-white border-bottom-primary">
            <h5 class="m-0 font-weight-bold text-primary"><i class="fas fa-film mr-2"></i> Danh sách Phim</h5>
            <a asp-action="them" class="btn btn-primary btn-icon-split shadow-sm">
                <span class="icon text-white-50">
                    <i class="fas fa-plus"></i>
                </span>
                <span class="text">Thêm Phim Mới</span>
            </a>
        </div>
    <div class="card-body">
            <form asp-action="Index" method="get" class="mb-4">
                <div class="row g-2 align-items-center">

                    <div class="col-md-3">
                        <div class="input-group">
                            <span class="input-group-text bg-white border-right-0"><i class="fas fa-search text-gray-400"></i></span>
                            <input type="text" name="searchString" value="@ViewBag.CurrentSearch" class="form-control border-left-0 small" placeholder="Tìm tên phim..." style="height: 38px;">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <select name="trangThai" class="form-control form-select" style="height: 38px;">
                            <option value="">-- Tất cả trạng thái --</option>
                            <option value="Đang công chiếu" selected="@(ViewBag.CurrentStatus == "Đang công chiếu")">Đang công chiếu</option>
                            <option value="Sắp công chiếu" selected="@(ViewBag.CurrentStatus == "Sắp công chiếu")">Sắp công chiếu</option>
                            <option value="Đã chiếu" selected="@(ViewBag.CurrentStatus == "Đã chiếu")">Đã chiếu</option>
                        </select>
                    </div>

                    <div class="col-md-4">
                        <select name="maTheLoai" class="form-control select2-multi" multiple="multiple" style="width: 100%">
                            @if (ViewBag.AllTheLoais != null)
                            {
                                var selectedIds = ViewBag.CurrentGenre as List<int> ?? new List<int>();
                                foreach (var tl in ViewBag.AllTheLoais)
                                {
                                    if (selectedIds.Contains(tl.MaTheLoai))
                                    {
                                        <option value="@tl.MaTheLoai" selected>@tl.TenTheLoai</option>
                                    }
                                    else
                                    {
                                        <option value="@tl.MaTheLoai">@tl.TenTheLoai</option>
                                    }
                                }
                            }
                        </select>
                    </div>

                    <div class="col-md-2 d-flex">
                        <button type="submit" class="btn btn-primary w-100 me-1" style="height: 38px;">
                            <i class="fas fa-filter"></i> Lọc
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary shadow-sm" style="height: 38px;">
                            <i class="fas fa-sync-alt text-gray-500"></i>
                        </a>
                    </div>
                </div>
            </form>
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle mr-2"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr class="text-center">
                            <th style="width: 50px;">Mã</th>
                            <th>Tên phim</th>
                            <th>Mô tả</th>
                            <th style="width: 80px;">Thời lượng (phút)</th>
                            <th>Ngày phát hành</th>
                            <th>Ngày kết thúc</th>
                            <th>Đạo diễn</th>
                            <th>Thể loại</th>
                            <th style="width: 80px;">Poster</th>
                            <th style="width: 60px;">Trailer</th>
                            <th style="width: 120px;">Trạng thái</th>
                            <th style="width: 100px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (danhSachPhim != null && danhSachPhim.Any())
                        {
                            @foreach (var item in danhSachPhim.OrderByDescending(x=> x.NgayPhatHanh))
                            {
                                <tr>
                                    <td class="text-center font-weight-bold">@item.MaPhim</td>

                                    <td class="title-truncate">
                                        @item.TenPhim
                                    </td>

                                    <td>
                                        <div class="desc-truncate" title="@item.MoTa">
                                            @item.MoTa
                                        </div>
                                    </td>

                                    <td class="text-center">@item.ThoiLuong</td>

                                    <td class="text-center">
                                        @item.NgayPhatHanh.Value.ToString("dd/MM/yyyy")
                                    </td>

                                    <td class="text-center">
                                        @item.NgayKetThuc.Value.ToString("dd/MM/yyyy")
                                    </td>

                                    <td>@item.DaoDien</td>

                                    <td>
                                        @if (item.PhimTheLoais != null && item.PhimTheLoais.Any())
                                        {
                                            <div class="d-flex flex-wrap gap-1">
                                                @foreach (var ct in item.PhimTheLoais)
                                                {
                                                    <span class="badge bg-light text-dark border mr-1 mb-1">@ct.MaTheLoaiNavigation?.TenTheLoai</span>
                                                }
                                            </div>
                                        }
                                    </td>

                                    <td class="text-center">
                                        @if (!string.IsNullOrEmpty(item.PosterPhim))
                                        {
                                            var imgSrc = "/" + item.PosterPhim;
                                            <img src="@imgSrc" alt="Poster" class="poster-thumb"
                                                 onerror="this.onerror=null;this.src='https://via.placeholder.com/60x90?text=No+Img';" />
                                        }
                                        else
                                        {
                                            <span class="text-muted small">No Image</span>
                                        }
                                    </td>

                                    <td class="text-center">
                                        @if (!string.IsNullOrEmpty(item.TrailerPhim))
                                        {
                                            string linkTrailer = item.TrailerPhim;
                                            if (!linkTrailer.StartsWith("http", StringComparison.OrdinalIgnoreCase))
                                            {
                                                linkTrailer = "https://" + linkTrailer;
                                            }
                                            <a href="@linkTrailer" target="_blank" class="btn btn-danger btn-circle btn-sm" title="Xem Trailer">
                                                <i class="fab fa-youtube"></i>
                                            </a>
                                        }
                                    </td>

                                    <td class="text-center align-middle">
                                        @if (item.TrangThai == "Đang công chiếu")
                                        {
                                            <span class="badge bg-success w-100 py-2">@item.TrangThai</span>
                                        }
                                        else if (item.TrangThai == "Sắp công chiếu")
                                        {
                                            <span class="badge bg-warning text-dark w-100 py-2">@item.TrangThai</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary w-100 py-2">@item.TrangThai</span>
                                        }
                                    </td>

                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="sua" asp-route-id="@item.MaPhim" class="btn btn-outline-warning btn-sm shadow-sm" title="Sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="xoa" asp-route-id="@item.MaPhim" class="btn btn-outline-danger btn-sm shadow-sm">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="11" class="text-center py-5">
                                    <p class="text-muted mb-0">Chưa có dữ liệu phim nào.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <style>
        .select2-container .select2-selection--multiple {
            min-height: 38px !important;
            border: 1px solid #d1d3e2 !important;
            padding: 4px !important;
        }

        .select2-container--default .select2-selection--multiple .select2-selection__choice {
            background-color: #4e73df !important; 
            color: white !important;
            border: none !important;
            border-radius: 4px !important;
            padding: 3px 8px !important;
            margin-top: 3px !important;
            margin-right: 5px !important;
            display: inline-flex !important;
            flex-direction: row-reverse !important; 
            align-items: center !important;
            gap: 6px !important; 
        }

        .select2-container--default .select2-selection--multiple .select2-selection__choice__remove {
            color: rgba(255,255,255,0.8) !important;
            margin: 0 !important;
            padding: 0 !important;
            border: none !important;
            float: none !important; 
            background: transparent !important;
            font-size: 16px !important;
            font-weight: bold !important;
            line-height: 1 !important;
            position: static !important; 
        }

            .select2-container--default .select2-selection--multiple .select2-selection__choice__remove:hover {
                color: #fff !important;
                background-color: transparent !important;
            }
    </style>

    <script>
        $(document).ready(function() {
            $('.select2-multi').select2({
                placeholder: "Chọn thể loại (có thể chọn nhiều)",
                allowClear: true,
                closeOnSelect: false, 
                width: 'resolve' 
            });
        });
    </script>
}