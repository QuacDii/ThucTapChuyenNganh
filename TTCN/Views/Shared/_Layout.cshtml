@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css">

    <title>@ViewData["Title"] - Cinema</title>

</head>
<body class="d-flex flex-column min-vh-100">

    <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">CINEMA</a>
            <ul class="navbar-nav mx-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Trang Chủ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Phim</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Lịch Chiếu</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Rạp</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Khuyến Mãi</a>
                </li>
            </ul>

            <!-- Logic Login (Dùng Session) -->
            <div class="d-flex align-items-center">
                <form class="d-flex me-3" role="search" asp-controller="Home" asp-action="Index" method="get">
                    <input class="form-control me-2" type="search" name="keyword" placeholder="Tìm kiếm phim..." aria-label="Search">
                    <button class="btn btn-outline-danger" type="submit"><i class="fas fa-search"></i></button>
                </form>

                @if (HttpContextAccessor.HttpContext.Session.GetString("UserEmail") != null)
                {
                    <!-- NẾU ĐÃ ĐĂNG NHẬP -->
                    <span class="navbar-text text-white me-3" style="white-space: nowrap;">
                        Chào, @HttpContextAccessor.HttpContext.Session.GetString("UserHoTen")!
                    </span>

                    @if (HttpContextAccessor.HttpContext.Session.GetString("UserVaiTro") == "Admin")
                    {
                        <a asp-controller="Users" asp-action="Index" class="btn btn-warning me-2 btn-sm">
                            Quản lý
                        </a>
                    }
                    <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-danger btn-sm">
                        Đăng xuất
                    </a>
                }
                else
                {
                    <!-- NẾU CHƯA ĐĂNG NHẬP: Nút mở MODAL -->
                    <button type="button" class="btn btn-login" data-bs-toggle="modal" data-bs-target="#loginModal">
                        <i class="fas fa-user-circle"></i>
                    </button>
                }
            </div>
        </div>
    </nav>

    <div class="main-content">
        @RenderBody() 
    </div>

    <footer class="pt-5 pb-4 mt-auto">
        <div class="container text-center text-md-start">
            <div class="row text-center text-md-start">
                <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3">
                    <h5 class="text-uppercase mb-4 font-weight-bold" style="color: var(--brand-red);">CINEMA</h5>
                    <p>Trải nghiệm điện ảnh tuyệt vời nhất tại hệ thống rạp của chúng tôi. Đặt vé nhanh chóng, an toàn.</p>
                </div>

                <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mt-3">
                    <h5 class="text-uppercase mb-4 font-weight-bold">Phim</h5>
                    <p><a href="#" class="footer-link">Phim đang chiếu</a></p>
                    <p><a href="#" class="footer-link">Phim sắp chiếu</a></p>
                </div>

                <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mt-3">
                    <h5 class="text-uppercase mb-4 font-weight-bold">Thông tin</h5>
                    <p><a href="#" class="footer-link">Giới thiệu</a></p>
                    <p><a href="#" class="footer-link">Tuyển dụng</a></p>
                    <p><a href="#" class="footer-link">Điều khoản</a></p>
                </div>

                <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mt-3">
                    <h5 class="text-uppercase mb-4 font-weight-bold">Liên hệ</h5>
                    <p><i class="fas fa-home me-3"></i> 123 Nguyễn Huệ, Q.1, TP.HCM</p>
                    <p><i class="fas fa-envelope me-3"></i> support@cinema.vn</p>
                    <p><i class="fas fa-phone me-3"></i> 1900 1234</p>
                </div>
            </div>

            <hr class="mb-4">

            <div class="row align-items-center">
                <div class="col-md-7 col-lg-8">
                    <p>
                        © 2025 Bản quyền thuộc về:
                        <a href="#" class="footer-link" style="font-weight: bold;">Cinema.vn</a>
                    </p>
                </div>
                <div class="col-md-5 col-lg-4">
                    <div class="text-center text-md-end">
                        <a href="#" class="footer-link social-icon"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="footer-link social-icon"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="footer-link social-icon"><i class="fab fa-youtube"></i></a>
                        <a href="#" class="footer-link social-icon"><i class="fab fa-tiktok"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content rounded-3">

                <div class="modal-header modal-header-custom">
                    <h4 class="modal-title" id="loginModalLabel">Đăng Nhập</h4>
                    <button type="button" class="btn-close-white" data-bs-dismiss="modal" aria-label="Close">&times;</button>
                </div>

                <form id="loginForm" asp-controller="Account" asp-action="Login" method="post">
                    <div class="modal-body p-4">

                        <div id="loginErrorAlert" class="alert alert-danger" role="alert" style="display: none;"></div>

                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" required>
                            <label for="email">Email</label>
                        </div>

                        <div class="form-floating mb-3 position-relative">
                            <input type="password" class="form-control" id="matKhau" name="matKhau" placeholder="Mật khẩu" required>

                            <label for="matKhau">Mật khẩu</label>

                            <button type="button" class="password-toggle-icon" id="togglePasswordIcon">

                                <svg id="iconEyeOpen" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-.474 1.523-1.32 2.92-2.39 4.093" />
                                </svg>

                                <svg id="iconEyeClosed" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="display: none;">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.542-7 .474-1.523 1.32-2.92 2.39-4.093M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.598 14.802A9.953 9.953 0 0121.542 12c-1.274-4.057-5.064-7-9.542-7-1.352 0-2.656.33-3.833.918" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1l22 22" />
                                </svg>
                            </button>
                        </div>

                        <button type="submit" class="btn-login-submit">Đăng nhập</button>

                        <div class="login-links">
                            <a asp-controller="Account" asp-action="QuenMatKhau">Quên mật khẩu?</a> | 
                            <a asp-controller="Account" asp-action="DangKy">Đăng ký</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1100">
        @if (TempData["Success"] != null)
        {
            <div id="successToast" class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body">
                        <i class="fas fa-check-circle me-2"></i>
                        @TempData["Success"]
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        window.desiredRedirectUrl = window.desiredRedirectUrl || null;

        const passwordInput = document.getElementById('matKhau');
        const togglePasswordIcon = document.getElementById('togglePasswordIcon');
        const iconEyeOpen = document.getElementById('iconEyeOpen');
        const iconEyeClosed = document.getElementById('iconEyeClosed');

        if (togglePasswordIcon) {
            togglePasswordIcon.addEventListener('click', function() {
                const isPassword = passwordInput.type === 'password';

                passwordInput.type = isPassword ? 'text' : 'password';

                iconEyeOpen.style.display = isPassword ? 'none' : 'block';
                iconEyeClosed.style.display = isPassword ? 'block' : 'none';
            });
        }

        document.addEventListener('DOMContentLoaded', function () {
            var loginForm = document.getElementById('loginForm');
            if (loginForm) {
                loginForm.addEventListener('submit', async function (e) {
                    e.preventDefault();

                    var errorAlert = document.getElementById('loginErrorAlert');
                    var loginButton = loginForm.querySelector('.btn-login-submit');

                    loginButton.disabled = true;
                    loginButton.innerText = "ĐANG XỬ LÝ...";
                    errorAlert.style.display = 'none'; 

                    try {
                        var formData = new FormData(loginForm);

                        var response = await fetch(loginForm.action, {
                            method: 'POST',
                            body: new URLSearchParams(formData) 
                        });

                        var result = await response.json();

                        if (result.success) {
                            const target = window.desiredRedirectUrl || result.redirectUrl;
                            window.desiredRedirectUrl = null;
                            window.location.href = target || window.location.href;
                        } else {
                            errorAlert.innerText = result.message;
                            errorAlert.style.display = 'block';
                        }
                    } catch (error) {
                        errorAlert.innerText = 'Không thể kết nối đến máy chủ. Vui lòng thử lại.';
                        errorAlert.style.display = 'block';
                    } finally {
                         loginButton.disabled = false;
                         loginButton.innerText = "Đăng nhập";
                    }
                });
            }
            var successToastEl = document.getElementById('successToast');
                if (successToastEl) {
                var successToast = new bootstrap.Toast(successToastEl, {
                    autohide: true,
                    delay: 5000   
                });
                successToast.show(); 
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>