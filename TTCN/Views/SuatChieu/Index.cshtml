@model IEnumerable<TTCN.Models.SuatChieu>

@{
    ViewData["Title"] = "Quản lý Suất Chiếu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

<style>
    .table thead th {
        background-color: #4e73df;
        color: white;
        border: none;
        white-space: nowrap;
        vertical-align: middle;
    }

    .table tbody td {
        vertical-align: middle;
        color: #5a5c69;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fc;
    }
</style>

<div class="container-fluid">
    <div class="card shadow mb-4 border-0">
        <div class="card-header py-3 d-flex justify-content-between align-items-center bg-white border-bottom-primary">
            <h5 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-clock mr-2"></i> Danh sách Suất Chiếu
            </h5>
            <a asp-action="them" class="btn btn-primary btn-icon-split shadow-sm">
                <span class="icon text-white-50">
                    <i class="fas fa-plus"></i>
                </span>
                <span class="text">Thêm Suất Mới</span>
            </a>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" class="mb-4">
        <div class="row g-2">
            <div class="col-md-3">
                <div class="input-group">
                    <span class="input-group-text bg-light border-0"><i class="fas fa-search text-gray-400"></i></span>
                    <input type="text" name="search" value="@ViewBag.CurrentSearch" class="form-control bg-light border-0 small" placeholder="Nhập tên phim...">
                </div>
            </div>

            <div class="col-md-2">
                <select name="trangThai" class="form-control form-select bg-light border-0 small">
                    <option value="">-- Tất cả --</option>
                    <!option value="sap_chieu" @(ViewBag.CurrentStatus == "sap_chieu" ? "selected" : "")>Sắp chiếu</!option>
                    <!option value="dang_chieu" @(ViewBag.CurrentStatus == "dang_chieu" ? "selected" : "")>Đang chiếu</!option>
                    <!option value="da_chieu" @(ViewBag.CurrentStatus == "da_chieu" ? "selected" : "")>Đã chiếu</!option>
                </select>
            </div>

            <div class="col-md-2">
                <input type="text" id="ngayChieuInput" name="ngay" placeholder="Ngày chiếu..." value="@ViewBag.CurrentDate" class="form-control bg-light border-0 small">
            </div>

            <div class="col-md-3">
                <div class="input-group">
                    <input type="number" min="0" step="1000" name="min" value="@ViewBag.CurrentMinPrice" class="form-control bg-light border-0 small" placeholder="VD: 1000">
                    <span class="input-group-text bg-light border-0">-</span>
                    <input type="number" step="1000" min="0" name="max" value="@ViewBag.CurrentMaxPrice" class="form-control bg-light border-0 small" placeholder="VD: 50000">
                </div>
            </div>

            <div class="col-md-2 d-flex align-items-end">
                <div class="d-flex w-100">
                    <button type="submit" class="btn btn-primary w-100 flex-grow-1 shadow-sm btn-sm me-2" style="height: 38px;">
                        <i class="fas fa-filter mr-1"></i> Lọc 
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">
                        <i class="fas fa-sync-alt"></i>
                    </a>
                </div>
            </div>
        </div>
    </form>
             @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle mr-2"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr class="text-center">
                            <th style="width: 50px;">Mã Suất</th>
                            <th class="text-center">Tên Phim</th>
                            <th>Phòng</th>
                            <th>Ngày Chiếu</th>
                            <th>Bắt Đầu</th>
                            <th>Kết Thúc</th>
                            <th>Giá Vé</th>
                            <th>Trạng Thái</th>
                            <th style="width: 100px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model.OrderByDescending(x => x.GioBatDau))
                            {
                                <tr>
                                    <td class="text-center font-weight-bold">
                                        @item.MaSuat
                                    </td>

                                    <td class="font-weight-bold text-primary text-start">
                                        @Html.DisplayFor(modelItem => item.MaPhimNavigation.TenPhim)
                                    </td>
              
                                    <td class="text-center">
                                        <span class="badge bg-info text-white p-2 shadow-sm">
                                            @Html.DisplayFor(modelItem => item.MaPhongNavigation.TenPhong) /
                                            @if (item.MaPhongNavigation?.MaCumRapNavigation != null)
                                            {
                                               @item.MaPhongNavigation.MaCumRapNavigation.TenCumRap
                                            }
                                            else
                                            {
                                                <span class="text-muted small">---</span>
                                            }
                                        </span>
                                    </td>

                                    <td class="text-center font-weight-bold">
                                        @(item.GioBatDau.HasValue ? item.GioBatDau.Value.ToString("dd/MM/yyyy") : "")
                                    </td>

                                    <td class="text-center text-success fw-bold">
                                        @(item.GioBatDau.HasValue ? item.GioBatDau.Value.ToString("HH:mm") : "")
                                    </td>

                                    <td class="text-center text-danger fw-bold">
                                        @(item.GioKetThuc.HasValue ? item.GioKetThuc.Value.ToString("HH:mm") : "")
                                    </td>

                                    <td class="text-center font-weight-bold text-dark">
                                        @if (item.Gia > 0)
                                        {
                                            @item.Gia.Value.ToString("#,##0") <small>VNĐ</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted small fst-italic">Chưa có</span>
                                        }
                                    </td>

                                    <td class="text-center">
                                        @{
                                            var now = DateTime.Now;
                                            if (item.GioBatDau.HasValue && item.GioKetThuc.HasValue)
                                            {
                                                if (item.GioKetThuc < now)
                                                {
                                                    <span class="badge bg-secondary">Đã chiếu</span>
                                                }
                                                else if (item.GioBatDau <= now && item.GioKetThuc >= now)
                                                {
                                                    <span class="badge bg-danger spinner-grow-sm">
                                                        <span class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true"></span>
                                                        Đang chiếu
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">Sắp chiếu</span>
                                                }
                                            }
                                        }
                                    </td>

                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="sua" asp-route-id="@item.MaSuat" class="btn btn-outline-warning btn-sm shadow-sm" title="Sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="xoa" asp-route-id="@item.MaSuat" class="btn btn-outline-danger btn-sm shadow-sm" title="Xóa">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center py-5">
                                    <img src="https://cdn-icons-png.flaticon.com/512/7486/7486754.png" width="60" alt="Empty" class="mb-3 opacity-50" />
                                    <p class="text-muted mb-0">Chưa có dữ liệu suất chiếu nào.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
    document.addEventListener("DOMContentLoaded", function() {
        flatpickr("#ngayChieuInput", {
            dateFormat: "Y-m-d",    // Định dạng giá trị gửi về Server
            altInput: true,         // Bật chế độ hiển thị khác cho người dùng
            altFormat: "d/m/Y",     // Hiển thị dạng ngày/tháng/năm 
            allowInput: true,       // Cho phép nhập tay nếu muốn
            disableMobile: "true"   // Ép buộc dùng giao diện flatpickr trên mobile thay vì native datepicker
        });
    });
</script>
}